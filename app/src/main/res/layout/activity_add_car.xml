<!-- File: app/src/main/res/layout/activity_add_car.xml -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        android:padding="16dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- شركة السيارة -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_brand"
                    app:tint="@color/primary" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spBrand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:prompt="@string/brand"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <!-- طراز السيارة -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_model"
                    app:tint="@color/primary" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:prompt="@string/model"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <!-- سنة الإنتاج -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_year"
                    app:tint="@color/primary" />

                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:prompt="@string/year"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <!-- اسم السيارة -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints=""
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="24dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_car"
                    app:tint="@color/primary" />
                <Space
                    android:layout_width="8dp"
                    android:layout_height="wrap_content"
                    android:autofillHints="" />
                <EditText
                    android:id="@+id/etCarName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="اسم السيارة (اختياري)"/>
            </LinearLayout>

            <!-- أزرار الحفظ والإلغاء -->
            <Button
                android:id="@+id/btnSaveCar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="حفظ"
                android:textSize="18sp"
                android:padding="12dp"
                android:backgroundTint="@color/primary"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="إلغاء"
                android:textSize="18sp"
                android:padding="12dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/gray"
                android:textColor="@color/white"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- العنوان -->
        <TextView
            android:id="@+id/createAccountTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="أنشاء حساب"
            android:textColor="@color/blue"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"/>
        <!-- Hidden space of 16dp -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />
        <!-- الوصف -->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginTop="8dp"
            android:text="قم بإنشاء حساب حتى تتمكن من استكشاف جميع الوظائف الموجودة"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp" />

        <!-- حقل الإيميل (مع حد خارجي أزرق) -->
        <EditText
            android:id="@+id/emailField"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="32dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/ic_email"
            android:hint="البريد الالكتروني"
            android:inputType="textEmailAddress"
            android:background="@drawable/input_outline"
            android:paddingHorizontal="16dp" />

        <!-- حقل كلمة المرور -->
        <EditText
            android:id="@+id/passwordField"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:hint="كلمه المرور"
            android:drawableStart="@drawable/ic_password"
            android:drawableEnd="@drawable/ic_eye_off"
            android:drawablePadding="8dp"
            android:inputType="textPassword"
            android:background="@drawable/input_fill"
            android:paddingHorizontal="16dp" />

        <!-- حقل تأكيد كلمة المرور -->
        <EditText
            android:id="@+id/confirmPasswordField"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:hint="تأكيد كلمة المرور"
            android:drawableStart="@drawable/ic_password"
            android:drawableEnd="@drawable/ic_eye_off"
            android:drawablePadding="8dp"
            android:inputType="textPassword"
            android:background="@drawable/input_fill"
            android:paddingHorizontal="16dp" />

        <!-- زر التسجيل -->
        <Button
            android:id="@+id/signUpButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:text="أنشاء حساب"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:backgroundTint="@color/blue"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- Already have an account -->
        <TextView
            android:id="@+id/alreadyAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="هل لديك حساب بالفعل؟"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textAlignment="viewStart"/>

        <!-- Or continue with -->
        <TextView
            android:id="@+id/orContinueWith"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="أو الاستمرار مع"
            android:textColor="#1976D2"
            android:textSize="14sp"
            android:textAlignment="center"/>
        <!-- Hidden space of 16dp -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="16dp" />
        <!-- أيقونات التواصل الاجتماعي -->
        <LinearLayout
            android:id="@+id/socialIcons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="12dp">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_google"
                android:layout_marginEnd="16dp"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_facebook"
                android:layout_marginEnd="16dp"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/apple"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>

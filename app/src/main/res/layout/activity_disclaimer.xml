<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Card التنبيه مع أيقونة تحذير -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorRed"
        android:padding="14dp"
        android:gravity="center_vertical"
        android:layout_margin="18dp"
        android:elevation="3dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="28dp"
        android:clipToOutline="true">

        <ImageView
            android:src="@drawable/ic_warning"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="8dp"
            app:tint="@color/white" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="تنبيه هام: المعلومات هنا للإرشاد فقط ولا تغني عن مراجعة ميكانيكي مختص!"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/tajawal_bold"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- قائمة النقاط -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• جميع المعلومات في هذا التطبيق للإرشاد والتعليم فقط."
                android:textColor="@color/gray_text"
                android:textSize="15sp"
                android:fontFamily="@font/tajawal_regular"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• لا نضمن اكتمال أو دقة أو ملاءمة المعلومات لكل سيارة أو حالة."
                android:textColor="@color/gray_text"
                android:textSize="15sp"
                android:fontFamily="@font/tajawal_regular"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• استخدامك للتطبيق على مسؤوليتك الشخصية بالكامل."
                android:textColor="@color/gray_text"
                android:textSize="15sp"
                android:fontFamily="@font/tajawal_regular"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• لا نتحمل أي أضرار مباشرة أو غير مباشرة ناتجة عن استخدام المعلومات."
                android:textColor="@color/gray_text"
                android:textSize="15sp"
                android:fontFamily="@font/tajawal_regular"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• استشر ميكانيكي محترف دائمًا قبل أي إصلاحات أو قرارات مهمة."
                android:textColor="@color/gray_text"
                android:textSize="15sp"
                android:fontFamily="@font/tajawal_regular"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• لأي استفسار أو ملاحظة يمكنك التواصل معنا عبر صفحة الدعم."
                android:textColor="@color/gray_text"
                android:textSize="15sp"
                android:fontFamily="@font/tajawal_regular"
                android:layout_marginBottom="16dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- زر الدعم السريع -->
    <Button
        android:id="@+id/btn_contact_support"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="24dp"
        android:text="الدعم الفني - تواصل معنا"
        android:textColor="@color/white"
        android:backgroundTint="@color/blue"
        android:fontFamily="@font/tajawal_bold"
        android:textSize="16sp"
        android:drawablePadding="8dp"
        />
</LinearLayout>

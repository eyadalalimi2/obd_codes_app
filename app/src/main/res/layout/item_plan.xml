<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/bg_list_cards"
    android:padding="16dp"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/tvPlanName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plan_name_placeholder"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#222E36"
        android:layout_marginBottom="4dp" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plan_price_placeholder"
        android:textSize="16sp"
        android:textColor="#009688"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/tvFeatures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/plan_features_placeholder"
        android:textSize="14sp"
        android:textColor="#444"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <Button
            android:id="@+id/btnActivateWithCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/activate_code"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#FF9800"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btnBuyWithGoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buy_with_google"
            android:backgroundTint="#4CAF50"
            android:textColor="@android:color/white" />
    </LinearLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/base"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- مسافة علوية ثابتة -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="32dp"/>

        <!-- عنوان الصفحة -->
        <TextView
            android:id="@+id/tvSelectCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_code"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <!-- صف مربعات الكود -->
        <LinearLayout
            android:id="@+id/rowCodes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layoutDirection="ltr"
            android:textDirection="ltr"
            android:layout_marginBottom="24dp">

            <!-- مربع 1 -->
            <LinearLayout
                android:id="@+id/containerBox1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_code_box"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/box1"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="P"
                    android:textSize="28sp"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>

            <!-- مربع 2 -->
            <LinearLayout
                android:id="@+id/containerBox2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_code_box"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/box2"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="28sp"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>

            <!-- مربع 3 -->
            <LinearLayout
                android:id="@+id/containerBox3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_code_box"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/box3"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="28sp"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>

            <!-- مربع 4 -->
            <LinearLayout
                android:id="@+id/containerBox4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_code_box"
                android:layout_marginEnd="8dp">

                <TextView
                    android:id="@+id/box4"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="28sp"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>

            <!-- مربع 5 -->
            <LinearLayout
                android:id="@+id/containerBox5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="90dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_code_box">

                <TextView
                    android:id="@+id/box5"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="0"
                    android:textSize="28sp"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:gravity="center"/>
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- اختيار اللغة -->
        <LinearLayout
            android:id="@+id/languageSelect"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_language_dropdown"
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:focusable="true">

            <TextView
                android:id="@+id/tvLanguage"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/blue"/>
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_drop_down"/>
        </LinearLayout>

        <!-- زر البحث -->
        <Button
            android:id="@+id/btnSearch"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/search"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/bg_search_button"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:layout_marginBottom="32dp"/>

        <!-- How It Works + Share Hint -->
        <TextView
            android:id="@+id/tvHowItWorks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/how_it_works"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tvShareHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/share_hint"
            android:textSize="14sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp"/>

        <ImageView
            android:id="@+id/btnShare"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_share"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp"/>

        <!-- زر لوحة التحكم -->
        <Button
            android:id="@+id/btnGoToDashboard"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_search_button"
            android:text="@string/go_to_dashboard"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

</ScrollView>

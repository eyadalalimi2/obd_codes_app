<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutSubscriptionRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPlanName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/plan_name_placeholder"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#076571"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvSubscriptionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subscription_status"
                android:textSize="16sp"
                android:textColor="#555"
                android:layout_marginBottom="8dp" />

            <TextView
                android:id="@+id/tvStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subscription_start_date"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvExpiresAt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subscription_expiry_date"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDaysLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subscription_days_left"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />


            <Button
                android:id="@+id/btnRenew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/renew_subscription"
                android:backgroundTint="@color/blue"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cancel_subscription"
                android:backgroundTint="#E91E63"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp" />

        </LinearLayout>
    </ScrollView>

    <!-- ProgressBar أثناء التحميل -->
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:visibility="gone"/>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_standard">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- رمز الكود -->
        <TextView
            android:id="@+id/tvDialogCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/font_family_tajawal"
            android:textColor="@color/text_primary"/>

        <!-- عنوان الكود -->
        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_half"
            android:textSize="18sp"
            android:fontFamily="@font/font_family_tajawal"
            android:textColor="@color/text_secondary"/>

        <!-- قسم الوصف -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الوصف"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_standard"
            android:fontFamily="@font/font_family_tajawal"
            android:textColor="@color/text_primary"/>
        <TextView
            android:id="@+id/tvDialogDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_family_tajawal"
            android:textColor="@color/text_secondary"/>

        <!-- قسم الأعراض -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الأعراض"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_standard"
            android:fontFamily="@font/font_family_tajawal"
            android:textColor="@color/text_primary"/>
        <TextView
            android:id="@+id/tvDialogSymptoms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_family_tajawal"
            android:textColor="@color/text_secondary"/>

        <!-- قسم الأسباب -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الأسباب"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_standard"
            android:fontFamily="@font/font_family_tajawal"
            android:textColor="@color/text_primary"/>
        <TextView
            android:id="@+id/tvDialogCauses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_family_tajawal"
            android:textColor="@color/text_secondary"/>

        <!-- قسم الحلول -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الحلول"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_standard"
            android:fontFamily="@font/font_family_tajawal"
            android:textColor="@color/text_primary"/>
        <TextView
            android:id="@+id/tvDialogSolutions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_family_tajawal"
            android:textColor="@color/text_secondary"/>

        <!-- قسم الشدة -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/severity"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_standard"
            android:fontFamily="@font/font_family_tajawal"
            android:textColor="@color/text_primary"/>
        <TextView
            android:id="@+id/tvDialogSeverity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_family_tajawal"
            android:textColor="@color/text_secondary"/>

        <!-- قسم التشخيص -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="التشخيص"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/margin_standard"
            android:fontFamily="@font/font_family_tajawal"
            android:textColor="@color/text_primary"/>
        <TextView
            android:id="@+id/tvDialogDiagnosis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_family_tajawal"
            android:textColor="@color/text_secondary"/>

    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">


    <!-- المحتوى -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- عنوان ترحيبي وتعليمات -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_support"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#54616C"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvInstructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/support_instructions"
                android:textSize="16sp"
                android:textColor="#222E36"
                android:layout_marginBottom="16dp"/>

            <!-- حقل الموضوع -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/subject"
                android:textStyle="bold"
                android:textColor="#54616C"
                android:textSize="15sp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etSubject"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="@string/enter_subject"
                android:background="@drawable/bg_field_green"
                android:padding="12dp"
                android:textColor="#222E36"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"/>

            <!-- حقل الرسالة -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/message"
                android:textStyle="bold"
                android:textColor="#54616C"
                android:textSize="15sp"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:hint="@string/enter_message"
                android:background="@drawable/bg_field_white"
                android:padding="12dp"
                android:textColor="#222E36"
                android:textSize="16sp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:layout_marginBottom="24dp"/>

            <!-- زر الإرسال -->
            <Button
                android:id="@+id/btnSend"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="@string/send_message"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_search_button"
                android:drawableStart="@drawable/ic_mail"
                android:drawablePadding="8dp"
                android:layout_marginBottom="24dp"/>

            <!-- روابط الدعم السفلية -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center">

                <!-- بريد الدعم -->
                <LinearLayout
                    android:id="@+id/llEmailLink"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/bg_link_box"
                    android:layout_marginEnd="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_mail"
                        android:layout_marginBottom="4dp"
                        app:tint="#67B64A" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/support_email"
                        android:textColor="#222E36"
                        android:textSize="14sp"
                        android:gravity="center"/>
                </LinearLayout>

                <!-- رابط How It Works -->
                <LinearLayout
                    android:id="@+id/llHowItWorks"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/bg_link_box"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_search"
                        android:layout_marginBottom="4dp"
                        app:tint="#67B64A" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/how_it_works"
                        android:textColor="#222E36"
                        android:textSize="14sp"
                        android:gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/screen">

    <!-- Illustration -->
    <ImageView
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_marginBottom="24dp"
        android:src="@drawable/welcome_image"
        android:contentDescription="Illustration"/>

    <!-- Title with line break and blue color -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="مرحبا بك في تطبيق"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:layout_marginBottom="12dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OBD Code"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#1976D2"
        android:layout_marginBottom="12dp"
        android:gravity="center"/>

    <!-- Description (unchanged) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="قم بفحص سيارتك الان واكتشف جميع الاعطل مع طرق اصلاحها بدقه"
        android:textColor="#666666"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Buttons row -->
    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="87dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/loginButton"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:backgroundTint="#1740CE"
            android:text="تسجيل الدخول"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#FFFFFF" />
        <!-- Hidden space of 16dp -->
        <Space
            android:layout_width="16dp"
            android:layout_height="match_parent" />
        <!-- Register as plain text -->
        <TextView
            android:id="@+id/registerButton"
            android:layout_width="144dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingHorizontal="30dp"
            android:text="أنشاء حساب"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#000000" />
    </LinearLayout>
</LinearLayout>

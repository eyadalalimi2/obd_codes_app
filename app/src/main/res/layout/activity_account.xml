<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="user"
            type="com.proapp.obdcodes.network.model.User" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blue"
            android:elevation="4dp"
            app:titleTextColor="@android:color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:gravity="center_horizontal">

                <!-- بطاقة البروفايل -->
                <LinearLayout
                    android:id="@+id/llProfileCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_profile_card"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/imgProfile"
                        android:layout_width="84dp"
                        android:layout_height="84dp"
                        android:layout_marginEnd="12dp"
                        android:contentDescription="@string/profile_image"
                        android:scaleType="centerCrop"
                        app:imageUrl="@{user.profileImage}" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tvUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-medium"
                            android:textColor="#222E36"
                            android:textSize="18sp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="#717D89"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif"/>

                        <TextView
                            android:id="@+id/tvJobTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="#8CA2B1"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif-italic"/>

                        <TextView
                            android:id="@+id/tvRole"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="#222E36"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif"/>

                        <TextView
                            android:id="@+id/tvStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="#222E36"
                            android:textSize="14sp"
                            android:fontFamily="sans-serif"/>

                        <TextView
                            android:id="@+id/tvVerifiedAt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:textColor="#222E36"
                            android:textSize="12sp"
                            android:fontFamily="sans-serif"/>

                    </LinearLayout>
                </LinearLayout>

                <!-- بطاقة الباقة -->
                <LinearLayout
                    android:id="@+id/llPackageCard"
                    android:layout_width="match_parent"
                    android:layout_height="54dp"
                    android:background="#F3F6F7"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="10dp"
                        android:contentDescription="@string/package_icon"
                        android:src="@drawable/ic_car"
                        app:tint="#8CA2B1" />

                    <TextView
                        android:id="@+id/tvPackageName"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textColor="#8CA2B1"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"/>

                    <ImageView
                        android:id="@+id/btnChangePackage"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="@drawable/bg_edit_icon_orange"
                        android:contentDescription="@string/edit_package"
                        android:padding="7dp"
                        android:src="@drawable/ic_edit"
                        app:tint="#FF9343" />
                </LinearLayout>

                <!-- عنوان معلومات الحساب -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/account_info"
                    android:background="#54616C"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif"/>

                <!-- تفاصيل الحساب -->



                <TextView
                    android:id="@+id/tvCreatedAt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="#222E36"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvUserMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="#222E36"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvPhone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="#222E36"
                    android:textSize="15sp"/>

                <!-- عنوان معلومات الاشتراك -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/subscription_info"
                    android:background="#54616C"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:textSize="16sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="sans-serif"/>

                <!-- تفاصيل الاشتراك -->
                <TextView
                    android:id="@+id/tvCurrentPlan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="#222E36"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvCurrentPackage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="#222E36"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvPlanStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="#222E36"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tvPlanRenewalDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textColor="#E424B7"
                    android:textSize="15sp"/>

                <!-- عدد الأكواد المحفوظة -->
                <TextView
                    android:id="@+id/tvSavedCodesCount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="4dp"
                    android:textColor="#222E36"
                    android:textSize="15sp"/>

                <!-- إدارة الاشتراك -->
                <LinearLayout
                    android:id="@+id/llManageSubscription"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginTop="8dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/manage_subscription"
                        android:textColor="#222E36"
                        android:textSize="15sp"/>
                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_arrow_right"
                        app:tint="#222E36"/>
                </LinearLayout>
                

                <!-- بقية الأزرار كما هي... -->
                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="16dp"
                    android:text="@string/edit_profile"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:background="@drawable/bg_search_button"
                    android:textColor="#FFFFFF"/>

                <!-- أزرار الخروج والحذف -->
                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="4dp"
                    android:text="@string/log_out"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:background="@drawable/bg_search_button"
                    android:textColor="#FFFFFF"/>

                <Button
                    android:id="@+id/btnDelete"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="30dp"
                    android:text="@string/delete_account"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:background="@drawable/bg_delete_button"
                    android:textColor="#E91E63"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>

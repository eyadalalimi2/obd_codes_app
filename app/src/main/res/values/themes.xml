<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- الثيم الرئيسي للتطبيق -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/tajawal_regular</item>
        <item name="android:buttonStyle">@style/PrimaryButton</item>
        <item name="materialButtonStyle">@style/PrimaryButton</item>
    </style>

    <!-- للنص الرئيسي -->
    <style name="HeadlineText">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/tajawal_bold</item>
    </style>

    <!-- للعناوين الفرعية -->
    <style name="SubHeadlineText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:fontFamily">@font/tajawal_medium</item>
    </style>

    <!-- للنصوص العادية -->
    <style name="BodyText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:fontFamily">@font/tajawal_regular</item>
    </style>

    <!-- للأزرار الرئيسية -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorBackground</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/tajawal_bold</item>
        <item name="elevation">2dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- للأزرار الثانوية -->
    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@color/colorSecondaryBackground</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/tajawal_medium</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Splash screen theme -->
    <style name="Theme.OBD.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

</resources>
